<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_myfavorite_thumbnail"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:background="@drawable/shape_radius10"
        android:clipToOutline="true"
        android:scaleType="centerInside"
        android:src="@drawable/img_example"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.03"/>

    <TextView
        android:id="@+id/tv_myfavorite_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/video_title"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_myfavorite_thumbnail"
        app:layout_constraintStart_toEndOf="@id/iv_myfavorite_thumbnail"/>

    <TextView
        android:id="@+id/tv_myfavorite_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/video_dec"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_myfavorite_title"
        app:layout_constraintStart_toEndOf="@+id/iv_myfavorite_thumbnail"/>


</androidx.constraintlayout.widget.ConstraintLayout>