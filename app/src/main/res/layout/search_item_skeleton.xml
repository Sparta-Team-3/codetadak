<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:translationZ="1dp"
>
  <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
  >
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:padding="12dp"
    >
      <View
              android:id="@+id/shimmer_image_1"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/shimmer_title_1"
              android:background="@color/dark_purple"
      />

      <View
              android:id="@+id/shimmer_title_1"
              android:layout_width="match_parent"
              android:layout_height="24dp"
              app:layout_constraintTop_toBottomOf="@id/shimmer_image_1"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginTop="12dp"
              android:background="@color/dark_purple"
      />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:padding="12dp"
    >
      <View
              android:id="@+id/shimmer_image_2"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/shimmer_title_2"
              android:background="@color/dark_purple"
      />

      <View
              android:id="@+id/shimmer_title_2"
              android:layout_width="match_parent"
              android:layout_height="24dp"
              app:layout_constraintTop_toBottomOf="@id/shimmer_image_2"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginTop="12dp"
              android:background="@color/dark_purple"
      />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:padding="12dp"
    >
      <View
              android:id="@+id/shimmer_image_3"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/shimmer_title_3"
              android:background="@color/dark_purple"
      />

      <View
              android:id="@+id/shimmer_title_3"
              android:layout_width="match_parent"
              android:layout_height="24dp"
              app:layout_constraintTop_toBottomOf="@id/shimmer_image_3"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginTop="12dp"
              android:background="@color/dark_purple"
      />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </LinearLayout>
</ScrollView>