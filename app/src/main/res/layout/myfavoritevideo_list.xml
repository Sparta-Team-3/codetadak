<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/iv_myfavorite_thumbnail"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_radius10"
        android:clipToOutline="true"
        android:src="@drawable/img_example"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_myfavorite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="영상제목"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintBottom_toTopOf="@+id/tv_myfavorite_info"
        app:layout_constraintStart_toEndOf="@id/iv_myfavorite_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_myfavorite_thumbnail"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_myfavorite_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="설명입니다."
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_myfavorite_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_myfavorite_title" />


</androidx.constraintlayout.widget.ConstraintLayout>